FROM python:3.12-slim

WORKDIR /app
COPY . .

# install python deps
RUN pip install -r requirements.txt

# Env-configurable data paths
ENV REF_DATA_PATH=/app/data/simulation/reference_data.csv
ENV CURR_DATA_PATH=/app/data/simulation/current_data.csv
ENV PORT=5003

EXPOSE 5003
CMD ["python", "app.py"]
